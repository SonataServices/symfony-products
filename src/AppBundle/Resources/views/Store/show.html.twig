{% extends 'base.html.twig' %}

{% block body %}

<h1>Store</h1>
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            <label id="notice">{{ flash_message }}</label>
        </div>
    {% endfor %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ document.location }}</td>
        </tr>
        
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('store') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('store_edit', { 'id': document.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('store_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
