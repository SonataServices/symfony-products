{% extends 'base.html.twig' %}

{% block body %}

<h1>Store list</h1>
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            <label id="notice">{{ flash_message }}</label>
        </div>
    {% endfor %}
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="{{ path('store_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
            <td>{{ document.name }}</td>
            <td>{{ document.location }}</td>
            
            <td>
                <ul>
                    <li>
                        <a href="{{ path('store_show', { 'id': document.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('store_edit', { 'id': document.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('store_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}